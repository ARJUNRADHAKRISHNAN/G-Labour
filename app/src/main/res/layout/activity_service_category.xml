<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceCategoryActivity">


    <TextView
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Service Category"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#080707"

        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/servicelogo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        />
    <Button
        android:id="@+id/buttonMaintanence"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350dp"
        android:layout_centerHorizontal="true"
        android:text="Home Maintanence Services"
        android:background="#0D27E8"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/buttonAppliances"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="280dp"
        android:layout_centerHorizontal="true"
        android:text="Home Appliances Services"
        android:background="#0D27E8"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_centerHorizontal="true"
        android:text="Cleaning Services"
        android:background="#0D27E8"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#fff"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:layout_centerHorizontal="true"
        android:text="Handicraft Services"
        android:background="#0D27E8"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#fff"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:text="Project Services"
        android:background="#0D27E8"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#fff"
        />



</RelativeLayout>